<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:bank.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="bank.Views.StoragePageView"
             x:DataType="viewModels:StoragePageViewModel">
    <Design.DataContext>
        <viewModels:StoragePageViewModel />
    </Design.DataContext>

    <ScrollViewer>
        <Grid IsVisible="{Binding Source={x:Static viewModels:GlobalStorage.Instance}, Path=IsUserEmpty}">
            <Grid IsVisible="{Binding !IsSelectedStorage}">
                <Grid Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <ListBox x:Name="storages" ItemsSource="{Binding Storages}" Margin="10"
                             VerticalAlignment="Stretch"
                             HorizontalAlignment="Stretch"
                             SelectedItem="{Binding SelectedStorage}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="{Binding Name}" Margin="5" />
                                    <TextBlock Text="{Binding Country}" Margin="5" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Grid>

            <Grid IsVisible="{Binding IsSelectedStorage}" ColumnDefinitions="Auto,*">
                <Grid Grid.Column="0">
                    <StackPanel Orientation="Vertical">
                        <TextBlock
                            Text="{Binding Source={x:Static viewModels:GlobalStorage.Instance}, 
                                Path=SelectedStorage.Name}"
                            Margin="5" />
                        <TextBlock
                            Text="{Binding Source={x:Static viewModels:GlobalStorage.Instance},
                                Path=SelectedStorage.Country}"
                            Margin="5" />
                        <TextBlock
                            Text="{Binding Source={x:Static viewModels:GlobalStorage.Instance}, 
                                Path=SelectedStorage.Size}"
                            Margin="5" />
                    </StackPanel>
                </Grid>
                <Grid Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Top">
                    <Button Command="{Binding Back}">Back</Button>
                    <Button
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Width="32"
                        Height="32"
                        Margin="0 10 10 0"
                        Click="ShowModal">
                        <PathIcon Height="24" Data="{StaticResource add_square_regular}" />
                    </Button>
                    <Grid x:Name="modal" EffectiveViewportChanged="ChangeModal" Margin="10">
                        <Border HorizontalAlignment="Right" VerticalAlignment="Top">
                            <Grid RowDefinitions="Auto,Auto,Auto,Auto">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0" Width="400" Margin="0,0,0,10">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <TextBlock Margin="0,0,0,10" Text="Product name:" Grid.Row="0" />
                                    <TextBox x:Name="name" Text="{Binding Name, Mode=TwoWay}"
                                             Grid.Row="1" />
                                </Grid>

                                <Grid Grid.Row="1" Width="400" Margin="0,0,0,10">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <TextBlock Margin="0,0,0,10" Text="Count:" Grid.Row="0" />
                                    <TextBox x:Name="count" Text="{Binding Count, Mode=TwoWay}"
                                             Grid.Row="1" />
                                </Grid>
                                
                                <Grid Grid.Row="2" Width="400" Margin="0,0,0,10">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <TextBlock Margin="0,0,0,10" Text="Price:" Grid.Row="0" />
                                    <TextBox x:Name="price" Text="{Binding Price, Mode=TwoWay}"
                                             Grid.Row="1" />
                                </Grid>
                                
                                <Button Grid.Row="3" Content="Create"
                                        Click="ClickHandler"
                                        Command="{Binding CreateProductCommand}"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Bottom"
                                        Margin="0,0,0,0" />
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>